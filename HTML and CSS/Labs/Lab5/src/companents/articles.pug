mixin article(title, text, image)
    .article
      img.article-logo(src= image)
      h2.article-title= title
      p.article-text= text

mixin mini_article(title, text, image)
    .mini-article
      .mini-article-head
        img.mini-article-logo(src= image)
        h2.mini-article-title= title
      p.mini-article-text= text

.article-container
    each item in content 
        +article(item.title, item.text, item.image)
    .article_mini_container 
        each item in content_for_mini_articles 
            +mini_article(item.title, item.text, item.image)